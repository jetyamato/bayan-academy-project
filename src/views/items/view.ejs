<div id="modal-overlay-view"
  class="fixed inset-0 bg-gray-900 bg-opacity-50 backdrop-blur-sm flex justify-center items-center duration-300 hidden">
  <div id="viewModal" class="bg-white rounded-lg p-6">
    <div class="flex justify-between items-center">
      <h2 class="text-xl font-semibold text-gray-800" id="viewModalTitle">
        View Item Details
      </h2>
      <button type="button" class="text-gray-500 hover:text-gray-700 text-4xl closeViewModalButton">
        &times;
      </button>
    </div>
    <div class="flex gap-8">
      <div class="mb-4">
        <img id="viewImage" class="w-64 h-64 object-cover">
      </div>
      <div>
        <div class="mb-4">
          <p class="block text-gray-700 font-bold">Item Name</p>
          <p id="viewItemName"></p>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 font-bold">Description</label>
          <p id="viewItemDescription"></p>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 font-bold">Quantity</label>
          <p id="viewItemQuantity"></p>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 font-bold">Price</label>
          <p id="viewItemPrice"></p>
        </div>
      </div>
    </div>
    <div class="flex justify-end space-x-2">
      <button type="button" class="bg-gray-600 text-white rounded px-4 py-2 hover:bg-gray-500 closeViewModalButton">
        Close
      </button>
    </div>
  </div>
</div>