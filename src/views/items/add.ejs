<div id="modal-overlay"
  class="fixed inset-0 bg-gray-900 bg-opacity-50 backdrop-blur-sm flex justify-center items-center duration-300 hidden"
  data-modal-mode="add">
  <div id="modal" class="bg-white rounded-lg p-6 w-1/2 max-w-lg">
    <div class="flex justify-between items-center">
      <h2 class="text-xl font-semibold text-gray-800" id="modalTitle">
        Add Item
      </h2>
      <button type="button" class="text-gray-500 hover:text-gray-700 text-4xl closeModalButton">
        &times;
      </button>
    </div>
    <form class="mt-2" method="POST" action="/items" id="itemForm" enctype="multipart/form-data">
      <div class="flex gap-8">
        <div class="mb-4">
          <label class="block text-gray-700">Image Preview</label>
          <img id="imagePreview" class="border border-gray-300 rounded w-32 h-32 object-cover">
        </div>
        <div>
          <div class="mb-4">
            <label class="block text-gray-700">Item Image</label>
            <input type="file" name="itemImage" id="itemImage"
              class="border border-gray-300 rounded w-full p-2 focus:outline-none focus:ring focus:border-blue-300"
              accept="image/*">
          </div>
          <div class="mb-4">
            <label class="block text-gray-700">Item Name</label>
            <input type="text" name="itemName" id="itemName"
              class="border border-gray-300 rounded w-full p-2 focus:outline-none focus:ring focus:border-blue-300"
              placeholder="Enter item name">
          </div>
          <div class="mb-4">
            <label class="block text-gray-700">Description</label>
            <textarea name="itemDescription" id="itemDescription"
              class="border border-gray-300 rounded w-full p-2 focus:outline-none focus:ring focus:border-blue-300"
              placeholder="Enter item description"></textarea>
          </div>
          <div class="mb-4">
            <label class="block text-gray-700">Category</label>
            <input type="text" name="itemCategory" id="itemCategory"
              class="border border-gray-300 rounded w-full p-2 focus:outline-none focus:ring focus:border-blue-300"
              placeholder="Enter item category">
          </div>
          <div class="mb-4">
            <label class="block text-gray-700">Quantity</label>
            <input type="number" name="itemQuantity" id="itemQuantity"
              class="border border-gray-300 rounded w-full p-2 focus:outline-none focus:ring focus:border-blue-300"
              placeholder="Enter item quantity" min="1">
          </div>
          <div class="mb-4">
            <label class="block text-gray-700">Price</label>
            <input type="text" name="itemPrice" id="itemPrice"
              class="border border-gray-300 rounded w-full p-2 focus:outline-none focus:ring focus:border-blue-300"
              placeholder="Enter item price">
          </div>
        </div>
      </div>
      <div class="flex justify-end space-x-2">
        <button type="button" class="bg-gray-600 text-white rounded px-4 py-2 hover:bg-gray-500 closeModalButton">
          Close
        </button>
        <button type="button" id="saveButton" class="bg-blue-600 text-white rounded px-4 py-2 hover:bg-blue-500">
          Save
        </button>
      </div>
    </form>
  </div>
</div>